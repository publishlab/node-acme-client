        "node-forge": "^0.8.4",
        "openssl-wrapper": "^0.3.0",
        "tempfile": "^3.0.0"
    },
    "devDependencies": {
        "chai": "^4.1.0",
        "chai-as-promised": "^7.0.0",
        "eslint": "^6.0.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.10.0",
